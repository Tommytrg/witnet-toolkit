{
  "name": "witnet-toolkit",
  "version": "2.1.0-beta.0",
  "description": "Typescript library and CLI tooling for Web3 buidlers willing to interact with the Wit/Oracle blockchain.",
  "author": "Witnet Foundation",
  "license": "MIT",
  "private": false,
  "type": "commonjs",
  "bin": {
    "witnet": "src/bin/toolkit.js",
    "witnet-toolkit": "src/bin/toolkit.js"
  },
  "files": [
    "witnet/witnet.proto.json",
    "witnet/assets",
    "dist",
    "src/bin",
    "src/lib/cli",
    "src/lib/helpers.js"
  ],
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "default": "./dist/index.js",
      "types": "./dist/*.d.ts"
    },
    "./assets": "./witnet/assets/index.js"
  },
  "types": "./dist/",
  "scripts": {
    "build": "pbjs --target json witnet/witnet.proto -o witnet/witnet.proto.json && tsc -p tsconfig.json",
    "fmt": "eslint --ext .js,.ts,.cjs . --ignore-path .gitignore",
		"fmt!": "biome check --write */**/*.{js,ts,cjs}",
    "postinstall": "biome check */**/*.{js,ts,cjs}",
    "prepare": "pnpm run build",
    "test": "cross-env-shell WITNET_TOOLKIT_ASSETS_PATH='../../../witnet/assets' node ./src/bin/toolkit.js",
    "test:unit": "vitest"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "bech32": "~2.0.0",
    "bip32": "^4.0.0",
    "cbor": "^10.0.3",
    "dotenv": "^16.4.1",
    "graphql-query-compress": "1.2.4",
    "inquirer": "^12.4.2",
    "lodash.merge": "^4.6.2",
    "moment": "^2.30.1",
    "promise-poller": "~1.9.1",
    "protobufjs": "^7.4.0",
    "qrcode-terminal": "^0.12.0",
    "secp256k1": "^5.0.1",
    "tiny-secp256k1": "~2.2.3",
    "vitest": "^3.0.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^22.10.2",
    "cross-env": "7.0.3",
    "eslint": "^9.16.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^17.15.0",
    "eslint-plugin-promise": "^7.2.1",
    "protobufjs-cli": "^1.1.3",
    "typescript": "^5.7.2"
  },
  "packageManager": "pnpm@9.15.0+sha512.76e2379760a4328ec4415815bcd6628dee727af3779aaa4c914e3944156c4299921a89f976381ee107d41f12cfa4b66681ca9c718f0668fa0831ed4c6d8ba56c"
}
